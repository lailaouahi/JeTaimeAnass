<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.logregister.CreerEvenement"
    android:background="@drawable/rose"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formulaire de Création d'un évènement"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/mauve"
        android:inputType="textEmailAddress"
        android:drawablePadding="2dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom de l'évènement"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/blanc"
        android:inputType="textEmailAddress"
        android:drawablePadding="2dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/idNomEvenement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choisissez la date de votre'évènement"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/blanc"
        android:inputType="textEmailAddress"
        android:drawablePadding="2dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_margin="20dp"
        />
    <DatePicker
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:layout_gravity="center">

    </DatePicker>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le nombre maximal de participants"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/blanc"
        android:inputType="textEmailAddress"
        android:drawablePadding="2dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        />
    <EditText
        android:id="@+id/idNbrMaxParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
            <Button
                android:id="@+id/idSubmitCréation"
                android:text="Submit"
                android:textColor="@color/rosefushia"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.06"
                android:layout_margin="10dp"
                android:background="@drawable/boutton"
                />
     </LinearLayout>
    </ScrollView>
</LinearLayout>
